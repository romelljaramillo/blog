{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<main class="container">
		<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
			<div class="col-md-6 px-0">
				<h1 class="display-4 fst-italic">Profile User</h1>
				<p class="lead my-3">Description user.</p>
				<p class="lead mb-0">
					<a href="/users" class="text-white fw-bold">Users...</a>
				</p>
			</div>
		</div>

		<div class="row p-4 p-md-5 mb-4">
			{% if user %}
				<div class="col-md-12 card p-3">
					<div class=" image d-flex flex-column justify-content-center align-items-center">
						<div class="avatar avatar-lg">
							<i class="fas fa-5x fa-user-circle"></i>
						</div>
						<span class="name mt-3">{{ user.name }}</span>
						<span class="idd">{{ user.email }}</span>
						<div class="d-flex flex-row justify-content-center align-items-center gap-2">
							<span class="idd1">
								<i class="fas fa-phone"></i>
								{{ user.phone }}
							</span>
						</div>
						<div class="d-flex flex-row justify-content-center align-items-center mt-3">
							<span class="number">1069
								<span class="follow">Followers</span>
							</span>
						</div>
						<div class=" d-flex mt-2">
							<a class="btn btn-dark" href="/users/{{ user.id }}">View Profile</a>
						</div>
						<div class="text mt-3">
							<i class="fas fa-map-marker-alt"></i>
							<span>
								{{ user.address.street }}
								-
								{{user.address.suite}}
								<br>
								{{ user.address.city }}
								CP:
								{{ user.address.zipcode }}
							</span>
						</div>
						<div class=" px-2 rounded mt-4 date ">
							<span class="join">Joined May,2021</span>
						</div>
					</div>
				</div>
			{% else %}
				<div class="alert alert-info" role="alert">
					No hay articulos para mostrar!
				</div>
			{% endif %}
		</div>
	</main>
{% endblock %}

